<%# views/extends/index.ejs %>
 
<% extend('../layout') %>
 




 <% function go(arrCont, tittle){%>
		<div class="container-fluid">
          <div class="block-content-header d-flex">
            <div class="b-tittle align-self-center">
			  <%=tittle%>
            </div>
            <div class="count align-self-center">
              <%=arrCont.length%>
            </div>
            <div class="ml-auto align-self-center">
              <a class="round-link" href="#"><span class="oi oi-arrow-thick-right"></span></a>
            </div>
          </div>
          <div id="new-albums" class="scrollbar scrollbar-warning">
            
			<% for(var i=0; i<arrCont.length; i++) {%>
			<div class="block-content-alb ">
				<a href="/goods/<%=arrCont[i].author_name%>/<%=arrCont[i].alb_name%>">
                <img class="alb-cover" src=/albums-img/<%=arrCont[i].ID_author%>/<%=arrCont[i].ID_album%>/<%=arrCont[i].album_cover%>>
              </a>     
			  <div class="block-content-alb-body">
                <div class="alb-name">
                  <a href="/goods/<%=arrCont[i].author_name%>/<%=arrCont[i].alb_name%>"><%=arrCont[i].alb_name%></a>
                </div>
                <div class="author-name">
                  <a href="#"><%=arrCont[i].author_name%></a>
                </div>
				<div class="albom_views_tabs albom_views_tabs_<%=arrCont[i].ID_album%>">
					<ul class="views-field-albom-format-media" >
						<%if(arrCont[i].ID_disktype1==1){%>
							<li class="tab tab-active" id="tab_<%=arrCont[i].ID_album%>_0">
								<a href="/goods/<%=arrCont[i].author_name%>/<%=arrCont[i].alb_name%>">CD</a>
							</li>
						<%}%>
						<%if(arrCont[i].ID_disktype2==2&&arrCont[i].ID_disktype1!=1){%>
							<li class="tab tab-active" id="tab_<%=arrCont[i].ID_album%>_1">
								<a href="/goods/<%=arrCont[i].author_name%>/<%=arrCont[i].alb_name%>">Винил</a>
							</li>
						<%} else if(arrCont[i].ID_disktype2==2){%>
							<li class="tab" id="tab_<%=arrCont[i].ID_album%>_1">
								<a href="/goods/<%=arrCont[i].author_name%>/<%=arrCont[i].alb_name%>">Винил</a>
							</li>
						<%}%>
					</ul>
					<div class="views-fields-prices" >
						<%if(arrCont[i].ID_disktype1==1){%>
							<div class="views-field-albom-price tab_<%=arrCont[i].ID_album%>_0" style="display: block;">
								цена <%=arrCont[i].alb_price1%>    
							</div>
						<%}%>
						<%if(arrCont[i].ID_disktype2==2&&arrCont[i].ID_disktype1!=1){%>
							<div class="views-field-albom-price tab_<%=arrCont[i].ID_album%>_1" style="display: block;">
								цена <%=arrCont[i].alb_price2%>    
							</div>
						<%} else if(arrCont[i].ID_disktype2==2){%>
							<div class="views-field-albom-price tab_<%=arrCont[i].ID_album%>_1" style="display: none;">
									цена <%=arrCont[i].alb_price2%>    
							</div>
						<%}%>
					</div>
					<div class="views-fields-links">
						<%if(arrCont[i].ID_disktype1==1){%>
						<a class="btn btn-sm btn-warning tab_<%=arrCont[i].ID_album%>_0 add-to-cart" data-id="<%=arrCont[i].ID_album%>_0" data-name="<%=arrCont[i].alb_name%>" data-price=<%=arrCont[i].alb_price1%>  href="#" style="display: inline-block;" aria-pressed="true">В корзину</a>
						<%}%>
						<%if(arrCont[i].ID_disktype2==2&&arrCont[i].ID_disktype1!=1){%>
						<a class="btn btn-sm btn-warning tab_<%=arrCont[i].ID_album%>_1 add-to-cart" data-id="<%=arrCont[i].ID_album%>_1" data-name="<%=arrCont[i].alb_name%>" data-price=<%=arrCont[i].alb_price2%> href="#" style="display: inline-block;" >В корзину</a>
						<%} else if(arrCont[i].ID_disktype2==2){%>
						<a class="btn btn-sm btn-warning tab_<%=arrCont[i].ID_album%>_1 add-to-cart" data-id="<%=arrCont[i].ID_album%>_1" data-name="<%=arrCont[i].alb_name%>" data-price=<%=arrCont[i].alb_price2%> href="#" style="display: none;" >В корзину</a>
						<%}%>
					</div>
				</div>
              </div>
			</div>
			<%}%>   
         
          </div>
        </div>
		<%}%>

		<%function slideshow(){%>
			<div class="container-fluid container-slideshow">
          <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselIndicators" data-slide-to="1"></li>
              <li data-target="#carouselIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="images/slideshow/vinil_img1.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="images/slideshow/1600x550_pinkfloyd.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="images/slideshow/kraftwerk1.png" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
		<%}%>

		<%
			for(var i=0;i<3;i++)
			{
				if(i==2)
				{
				slideshow();
				}
				go(content[i],tittles[i])
			}		
		%>