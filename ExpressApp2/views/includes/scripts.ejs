    <script type="text/javascript">
      $(document).ready(function(){
        $(".views-field-albom-format-media").each(function(index, elem){
          $(elem).children('')[0].classList.add("tab-active");
          //elem.addClass("tab-active");
          //console.log($(elem).children('')[0]);
        });
      });

      $(function(){
        $('.tab').bind('mouseover', function(e){
          $(this).addClass("tab-active");

          var alb_id= $(this).attr('id').slice(0,-1);
          //console.log(alb_id);

          $("."+$(this).attr('id')).each(function(index, elem){
            switch(elem.tagName)
            {
              case "DIV":
                elem.style.display="block";
                break;
              case "A":
                elem.style.display="inline-block";
                break;
            }
          });

          var a=$(this).siblings('li');
          for(var i=0;i<a.length;i++)
          {
            if($(a[i]).hasClass('tab-active'))
            {
              $(a[i]).removeClass("tab-active");
              //console.log(a[i]);
            }
          }

          for (var i=0;i<a.length+1;i++)
          {
            if((alb_id+i)!=$(this).attr('id'))
              {
                $("."+(alb_id+i)).each(function(index, elem){
                elem.style.display="none";
              });
              }
          }
        });
      });
    </script>
    
